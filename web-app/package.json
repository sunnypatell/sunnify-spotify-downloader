{
  "name": "sunnify-web-app",
  "version": "1.0.0",
  "private": true,
  "description": "Web application monorepo for Sunnify (backend + webclient)",
  "scripts": {
    "dev:backend": "cd sunnify-backend && python app.py",
    "dev:webclient": "cd sunnify-webclient && npm run dev",
    "build:webclient": "cd sunnify-webclient && npm run build",
    "lint:webclient": "cd sunnify-webclient && npm run lint",
    "typecheck:webclient": "cd sunnify-webclient && npm run typecheck",
    "format:webclient": "cd sunnify-webclient && npm run format",
    "format:check:webclient": "cd sunnify-webclient && npm run format:check"
  }
}
