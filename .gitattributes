# auto detect text files and normalize line endings
* text=auto

# source code - force LF
*.py text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.sh text eol=lf
*.txt text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf
*.spec text eol=lf

# qt files
*.ui text eol=lf
*.qrc text eol=lf

# windows scripts - force CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.pdf binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.mp3 binary
*.wav binary
*.mp4 binary

# lock files - exact match, no diff
pnpm-lock.yaml -diff linguist-generated=true
package-lock.json -diff linguist-generated=true
yarn.lock -diff linguist-generated=true

# generated files
Template.py linguist-generated=true
